/*-----QLabel-----*/
QLabel
{
	background-color: transparent;
	color: #000000;
	border-color: #000000;

}


/*-----QMenuBar-----*/
QMenuBar
{
	background-color: #2b579a;
	color: #ffffff;
	border-color: #000000;
        font-size: 10pt;
}


QMenuBar::disabled
{
	background-color: #404040;
	color: #656565;
	border-color: #051a39;

}


QMenuBar::item
{
    background-color: transparent;
    font-size: 10pt;
}


QMenuBar::item:selected
{
    background-color: #f0f5f3;
	color: #2b579a;

}


QMenuBar::item:pressed
{
    background-color: #dcdcdf;
    border: 1px solid #000;
    margin-bottom: -1px;
    padding-bottom: 1px;

}


/*-----QMenu-----*/
QMenu
{
    background-color: #dcdcdf;
    border: 1px solid;
    color: #000;
    font-size: 10pt;
}


QMenu QWidget{
	background-color: transparent;
        font-size: 10pt;
}


QMenu::separator
{
    height: 1px;
    background-color: #6d8eff;
    color: #ffffff;
    padding-left: 4px;
    margin-left: 10px;
    margin-right: 5px;

}


QMenu::item
{
    min-width : 150px;
    padding: 3px 5px 3px 5px;
    font-size: 10pt;
}


QMenu::item:selected
{
    background-color: #2b579a;
    color: #f0f5f3;

}


QMenu::item:disabled
{
    color: #262626;

}


/*-----QToolBar-----*/
QToolBar
{
	background-color: #2b579a;
	color: #ffffff;
        border: none;
}


/*-----QToolButton-----*/
QToolButton
{
	background-color: #2b579a;
	color: #ffffff;
        border: none;
        border-radius: 2px;
        padding: 2px;
        margin: 2px;
}


QToolButton::hover
{
	background-color: #f0f5f3;
        color: #2b579a;
        border-radius: 2px;
        padding: 2px;
        margin: 2px;
}


QToolButton::checked:hover
{
	background-color: #f0f5f3;
        color: #2b579a;
        border-radius: 2px;
        padding: 2px;
        margin: 2px;
}

QToolButton::checked
{
        background-color: #eeeeff;
        color: #2b579a;
        border-radius: 2px;
        padding: 2px;
        margin: 2px;
}


QToolButton::pressed
{
	background-color: #4070b3;
        color: #ffffff;
        border: 1px solid #fff;
        border-radius: 2px;
        padding: 1px;
        margin: 2px;
}


/*-----QToolTip-----*/
QToolTip
{
    border: 1px solid black;
    background-color: #2b579a;
    border-radius: 0px;
    color: #fff;
}


/*-----QTextEdit-----*/
QTextEdit{
    padding: 10px;
    border: none;
}


/*-----QComboBox-----*/
QComboBox
{
    background-color: #fefefe;
    border: 1px solid #2b579a;
    border-radius: 2px;
    padding-left: 6px;
    color: #000;
    height: 24px;

}


QComboBox:on
{
    background-color: #fefefe;

}


QComboBox QAbstractItemView
{
    background-color: #dcdcdf;
    color: #000;
    border: 1px solid #2b579a;
    selection-background-color: #2b579a;
    selection-color: #dcdcdf;
    outline: 0;

}


QComboBox::drop-down
{
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 22px;
    border-left-width: 0px;
    border-left-color: darkgray;
    border-left-style: solid;
    border-top-right-radius: 3px; 
    border-bottom-right-radius: 3px;

}


QComboBox::down-arrow
{
    image: url(":/resources/icons/sort_down.png");
    width:10px;
    height:10px;
}


/*-----QSpinBox-----*/
QSpinBox
{
    background-color: #fefefe;
    border-width: 1px;
    border-color: #1e1e1e;
    border-style: solid;
    color: #000;
    padding: 2px;
    selection-background-color: #4e4e8f;

}


QSpinBox::up-button, 
QSpinBox::down-button
{
    background-color: #fefefe;

}


QSpinBox::up-button:hover, 
QSpinBox::down-button:hover
{
    background-color: #fefefe;

}


QSpinBox::up-button:pressed, 
QSpinBox::down-button:pressed
{
    background-color: #ebebeb;
    border: 1px solid #ebebeb;

}


QSpinBox::down-arrow
{
    image: url("./ressources/down_arrow.png");
    width: 7px;

}


QSpinBox::up-arrow
{
    image: url("./ressources/up_arrow.png");
    width: 7px;

}


/*-----QSlider-----*/
QSlider 
{
    background-color: transparent;
    padding: 2px;

}

QSlider::groove:horizontal 
{
	subcontrol-origin: content;
	background-color: transparent;
	height: 15px;

}

QSlider::handle:horizontal 
{
    background-color: #2b579a;
    width: 15px;
    border-radius: 22px;

}

QSlider::sub-page:horizontal 
{
    background-color: #999;
    margin: 5px;
    border-radius: 5px;

}

QSlider::add-page:horizontal 
{
    background-color: #666;
    margin: 5px;
    border-radius: 5px;

}


/*-----QScrollBar-----*/
QScrollBar:horizontal
{
    background-color: #eeeeff;
    border: none;
    height: 6px;
}


QScrollBar::handle:horizontal
{
    background-color: #2b579a;
    border: none;
    height: 6px;
    border-radius: 3px;
}


QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal,
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal
{
    width: 0px;
    background-color: transparent;

}


QScrollBar:vertical
{
    background-color: #eeeeff;
    border: none;
    width: 6px;
}


QScrollBar::handle:vertical
{
    background-color: #2b579a;
    border: none;
    width: 6px;
    border-radius: 3px;
}


QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical,
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical
{
    height: 0px;
    background-color: transparent;
}


/*-----QStatusBar-----*/
QStatusBar
{
	background-color: #f5f3f3;
	color: #000000;
	border-color: #000000;

}


